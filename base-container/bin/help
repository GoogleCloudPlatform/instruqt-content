#!/bin/bash

if [ -f /root/help.png ]; then
	tiv -256 /root/help.png -h 40
fi

if [ -f /root/help.txt ]; then
	echo "# Your Quest"
	echo "-------------------------------"
	echo ""

	cat /root/help.txt

	echo ""
	echo "Type \"help\" to display this message again."
fi

if [ -f /root/hint.txt ]; then
	echo "Type \"hint\" if you get REALLY stuck."
fi
