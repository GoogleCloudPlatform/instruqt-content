#!/usr/bin/env python3
import sys, os

if len(sys.argv) == 1:
    if os.path.isfile('/root/choices.txt'):
        os.system('/usr/local/bin/terminal-quiz /root/choices.txt /root/answer.txt')
        with open('/root/answer.txt', 'r') as file:
            answer = file.read()
    else:
        answer = input("What is the answer to this challenge? ")
else:
    answer = ' '.join(sys.argv[1:])

f = open(os.path.dirname(__file__) + "/answer.txt", "w+")
f.write(answer.lower().strip())

print("Now press the A button to verify your answer")

