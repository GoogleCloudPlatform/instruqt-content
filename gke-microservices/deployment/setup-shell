kubectl label namespace default time=$(date '+%s') --overwrite # mark cluster as still used

echo "$DEPLOYMENT_HELP" > /root/.instruqt/help.txt

echo "$DEPLOYMENT_HINT" > /root/.instruqt/hint.txt

set-workdir /home

cat <<EOF > /home/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: <?>
  name: <?>
spec:
  replicas: <?>
  selector:
    matchLabels:
      <?>: <?>
  template:
    metadata:
      labels:
        <?>: <?>
    spec:
      containers:
      - image: <?>
        name: app
        ports:
          - name: http
            containerPort: 3000
EOF